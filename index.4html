            // Validasi nomor telepon
            const phoneRegex = /^[0-9]{10,13}$/;
            if (!phoneRegex.test(customerPhone.replace(/\D/g, ''))) {
                alert('Format nomor WhatsApp tidak valid! Gunakan format 081234567890');
                return;
            }
            
            if (category === 'ewallet' && selectedNominal) {
                const adminFee = Math.ceil(selectedNominal * (CONFIG.FEE_PERCENTAGE / 100));
                total = selectedNominal + adminFee;
