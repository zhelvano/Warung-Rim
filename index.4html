        // ================= VIOLET MEDIA PAY API FUNCTIONS =================
        function generateVMPaySignature(data, timestamp) {
            const message = `${VMPAY_CONFIG.API_KEY}:${timestamp}:${JSON.stringify(data)}`;
            console.log('Message for signature:', message);
            console.log('Secret key (first 10 chars):', VMPAY_CONFIG.SECRET_KEY.substring(0, 10) + '...');
            const signature = CryptoJS.HmacSHA256(message, VMPAY_CONFIG.SECRET_KEY).toString(CryptoJS.enc.Hex);
            console.log('Generated signature:', signature);
            return signature;
        }

        async function createVMPayTransaction(orderData) {
            try {
                console.log('Creating VMPay transaction with data:', orderData);
                
                const timestamp = Date.now();
                const signature = generateVMPaySignature(orderData, timestamp);
                
                // Debug info
                if (debugMode) {
                    console.log('API Request Details:', {
                        url: `${VMPAY_CONFIG.BASE_URL}/transaction/create`,
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': `Bearer ${VMPAY_CONFIG.API_KEY}`,
                            'X-Signature': signature,
                            'X-Timestamp': timestamp.toString()
                        },
                        body: JSON.stringify({
                            amount: orderData.amount,
                            customer_name: orderData.customer_name,
                            customer_email: orderData.customer_email,
                            customer_phone: orderData.customer_phone,
                            order_id: orderData.order_id,
                            payment_method: 'QRISC',
                            description: orderData.description,
                            callback_url: VMPAY_CONFIG.WEBHOOK_URL,
                            return_url: window.location.href + '?payment_success=true&order_id=' + orderData.order_id,
                            expired_time: Math.floor(Date.now() / 1000) + (24 * 60 * 60)
                        })
                    });
                }

                const response = await fetch(`${VMPAY_CONFIG.BASE_URL}/transaction/create`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${VMPAY_CONFIG.API_KEY}`,
                        'X-Signature': signature,
                        'X-Timestamp': timestamp.toString()
                    },
                    body: JSON.stringify({
                        amount: orderData.amount,
                        customer_name: orderData.customer_name,
                        customer_email: orderData.customer_email,
                        customer_phone: orderData.customer_phone,
                        order_id: orderData.order_id,
                        payment_method: 'QRISC',
                        description: orderData.description,
                        callback_url: VMPAY_CONFIG.WEBHOOK_URL,
                        return_url: window.location.href + '?payment_success=true&order_id=' + orderData.order_id,
                        expired_time: Math.floor(Date.now() / 1000) + (24 * 60 * 60)
                    })
                });

                console.log('API Response Status:', response.status);
                console.log('API Response Headers:', response.headers);

                const responseText = await response.text();
                console.log('API Response Text:', responseText);

                let result;
                try {
                    result = JSON.parse(responseText);
                } catch (e) {
                    console.error('Failed to parse JSON response:', e);
                    throw new Error('Invalid response from server: ' + responseText.substring(0, 100));
                }

                if (!response.ok) {
                    console.error('API Error Response:', result);
                    throw new Error(result.message || `HTTP error! status: ${response.status}`);
                }

                console.log('VMPay Success Response:', result);
                
                if (result.success) {
                    return result.data;
                } else {
                    throw new Error(result.message || 'Gagal membuat transaksi');
                }
                
            } catch (error) {
                console.error('VMPay API Error:', error);
                throw new Error('Terjadi kesalahan saat memproses pembayaran: ' + error.message);
            }
        }

        async function checkVMPayStatus(transactionId) {
            try {
                console.log('Checking status for transaction:', transactionId);
                
                const timestamp = Date.now();
                const signatureData = { transaction_id: transactionId };
                const signature = generateVMPaySignature(signatureData, timestamp);
                
                const response = await fetch(`${VMPAY_CONFIG.BASE_URL}/transaction/${transactionId}/status`, {
                    method: 'GET',
                    headers: {
                        'Authorization': `Bearer ${VMPAY_CONFIG.API_KEY}`,
                        'X-Signature': signature,
                        'X-Timestamp': timestamp.toString()
                    }
                });

                const result = await response.json();
                console.log('Status Check Response:', result);
                
                if (!response.ok) {
                    throw new Error(result.message || `HTTP error! status: ${response.status}`);
                }

                if (result.success) {
                    return result.data;
                } else {
                    throw new Error(result.message || 'Gagal mengambil status');
                }
                
            } catch (error) {
                console.error('VMPay Status Error:', error);
                throw error;
            }
        }

