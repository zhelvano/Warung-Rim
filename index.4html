            selectedPaymentMethod = 'qris';
        }

        // ================= ADMIN FUNCTIONS =================
        function showAdminPanel() {
            if (!adminLoggedIn) {
                showAdminLogin();
            } else {
                showAdminDashboard();
            }
            document.getElementById('adminModal').style.display = 'flex';
        }

        function showAdminLogin() {
            const content = `
                <h4 style="text-align: center; margin-bottom: 20px;">Login Admin</h4>
                
                <div class="form-group">
                    <label><i class="fas fa-user"></i> Username</label>
                    <input type="text" id="adminUsername" class="form-control" value="${CONFIG.ADMIN_USERNAME}">
                </div>
                
                <div class="form-group">
                    <label><i class="fas fa-lock"></i> Password</label>
                    <input type="password" id="adminPassword" class="form-control" value="${CONFIG.ADMIN_PASSWORD}">
                </div>
                
                <div class="form-group">
                    <label><i class="fas fa-key"></i> Violet Media Pay API Key</label>
                    <input type="text" id="vmpayApiKey" class="form-control" placeholder="Masukkan API Key" 
                           value="${VMPAY_CONFIG.API_KEY || ''}">
                </div>
                
                <div class="form-group">
                    <label><i class="fas fa-key"></i> Violet Media Pay Secret Key</label>
                    <input type="password" id="vmpaySecretKey" class="form-control" placeholder="Masukkan Secret Key" 
                           value="${VMPAY_CONFIG.SECRET_KEY || ''}">
                </div>
                
                <div class="form-group">
                    <label>
                        <input type="checkbox" id="debugMode" ${debugMode ? 'checked' : ''} onchange="toggleDebugMode()">
                        <i class="fas fa-bug"></i> Debug Mode
                    </label>
                </div>
                
                <button class="btn-pay" onclick="loginAdmin()">
                    <i class="fas fa-sign-in-alt"></i> Login
                </button>
            `;
            
            document.getElementById('adminBody').innerHTML = content;
        }

        function toggleDebugMode() {
            debugMode = document.getElementById('debugMode').checked;
        }

        function loginAdmin() {
            const username = document.getElementById('adminUsername').value;
            const password = document.getElementById('adminPassword').value;
            const apiKey = document.getElementById('vmpayApiKey').value;
            const secretKey = document.getElementById('vmpaySecretKey').value;
            
            if (username === CONFIG.ADMIN_USERNAME && password === CONFIG.ADMIN_PASSWORD) {
                adminLoggedIn = true;
                
                // Save API credentials
                if (apiKey && secretKey) {
                    VMPAY_CONFIG.API_KEY = apiKey;
                    VMPAY_CONFIG.SECRET_KEY = secretKey;
                    localStorage.setItem('vmpay_api_key', apiKey);
                    localStorage.setItem('vmpay_secret_key', secretKey);
                    
                    // Update production badge
                    document.querySelector('.production-badge').innerHTML = `
                        <i class="fas fa-bolt"></i> PRODUCTION READY
                    `;
                }
                
                showAdminDashboard();
            } else {
                alert('Username atau password salah!');
            }
        }

        function showAdminDashboard() {
            const content = `
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                    <h4>Dashboard Admin</h4>
                    <button onclick="logoutAdmin()" style="background: var(--danger); color: white; border: none; padding: 8px 15px; border-radius: 5px; cursor: pointer;">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </div>
                
                <div class="alert ${VMPAY_CONFIG.API_KEY ? 'alert-success' : 'alert-danger'}">
                    <i class="fas fa-${VMPAY_CONFIG.API_KEY ? 'check-circle' : 'exclamation-triangle'}"></i>
                    ${VMPAY_CONFIG.API_KEY ? 'Violet Media Pay API: CONNECTED' : 'Violet Media Pay API: NOT CONNECTED'}
                </div>
                
                <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 15px; margin-bottom: 25px;">
                    <div style="background: var(--primary); color: white; padding: 20px; border-radius: 10px; text-align: center;">
                        <div style="font-size: 14px; opacity: 0.9;">Total Produk</div>
                        <div style="font-size: 28px; font-weight: 800;">${products.jasa.length + products.ewallet.length}</div>
                    </div>
                    <div style="background: var(--success); color: white; padding: 20px; border-radius: 10px; text-align: center;">
                        <div style="font-size: 14px; opacity: 0.9;">Stok Jasa</div>
                        <div style="font-size: 28px; font-weight: 800;">${products.jasa.reduce((sum, p) => sum + p.stock, 0)}</div>
                    </div>
                    <div style="background: var(--info); color: white; padding: 20px; border-radius: 10px; text-align: center;">
                        <div style="font-size: 14px; opacity: 0.9;">Mode</div>
                        <div style="font-size: 28px; font-weight: 800;">${VMPAY_CONFIG.MODE.toUpperCase()}</div>
                    </div>
                </div>
                
                <h5><i class="fas fa-box"></i> Kelola Produk</h5>
                <div style="max-height: 300px; overflow-y: auto; margin-bottom: 25px;">
                    ${products.jasa.map(product => `
                        <div style="background: #f8f9fa; padding: 15px; border-radius: 8px; margin-bottom: 10px; border-left: 4px solid ${product.isActive ? 'var(--success)' : 'var(--danger)'}">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
                                <div>
                                    <strong>${product.name}</strong><br>
                                    <small>${formatCurrency(product.price)}</small>
                                </div>
                                <div style="display: flex; gap: 8px;">
                                    <button onclick="editProductStock(${product.id})" style="background: var(--primary); color: white; border: none; padding: 6px 12px; border-radius: 4px; cursor: pointer; font-size: 12px;">
                                        <i class="fas fa-edit"></i> Stock
                                    </button>
                                    <button onclick="editProductPrice(${product.id})" style="background: var(--info); color: white; border: none; padding: 6px 12px; border-radius: 4px; cursor: pointer; font-size: 12px;">
                                        <i class="fas fa-tag"></i> Harga
                                    </button>
                                </div>
                            </div>
                            <div style="display: flex; justify-content: space-between; font-size: 13px; color: #666;">
                                <span>Stock: <strong>${product.stock}</strong></span>
                                <span>${product.isActive ? 'â Aktif' : 'â Nonaktif'}</span>
                            </div>
                        </div>
                    `).join('')}
                </div>
                
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <button onclick="addNewProduct()" style="background: var(--success); color: white; border: none; padding: 12px; border-radius: 6px; cursor: pointer; font-size: 14px; font-weight: 600;">
                        <i class="fas fa-plus"></i> Tambah Produk
                    </button>
                    <button onclick="testVMPayConnection()" style="background: var(--info); color: white; border: none; padding: 12px; border-radius: 6px; cursor: pointer; font-size: 14px; font-weight: 600;">
                        <i class="fas fa-plug"></i> Test Connection
                    </button>
                </div>
            `;
            
            document.getElementById('adminBody').innerHTML = content;
        }

        function editProductStock(productId) {
            const product = products.jasa.find(p => p.id === productId);
            if (!product) return;
            
            const newStock = prompt(`Edit stock untuk ${product.name}:`, product.stock);
            if (newStock !== null && !isNaN(newStock) && newStock >= 0) {
                product.stock = parseInt(newStock);
                alert('Stock berhasil diupdate!');
                showAdminDashboard();
                renderProducts();
            }
        }

        function editProductPrice(productId) {
            const product = products.jasa.find(p => p.id === productId);
            if (!product) return;
            
            const newPrice = prompt(`Edit harga untuk ${product.name}:`, product.price);
            if (newPrice !== null && !isNaN(newPrice) && newPrice > 0) {
                product.price = parseInt(newPrice);
                alert('Harga berhasil diupdate!');
                showAdminDashboard();
                renderProducts();
            }
        }

        function addNewProduct() {
            const name = prompt('Nama produk baru:');
            if (!name) return;
            
            const price = prompt('Harga produk:');
            if (!price || isNaN(price)) return;
            
            const stock = prompt('Stock awal:', '10');
            if (!stock || isNaN(stock)) return;
            
            const description = prompt('Deskripsi produk:', 'Produk premium');
            
            const newProduct = {
                id: Date.now(),
                name: name,
                price: parseInt(price),
                icon: 'fas fa-box',
                description: description || 'Produk premium',
                stock: parseInt(stock),
                isActive: true
            };
            
            products.jasa.push(newProduct);
            alert('Produk baru berhasil ditambahkan!');
            showAdminDashboard();
            renderProducts();
        }

        async function testVMPayConnection() {
            if (!VMPAY_CONFIG.API_KEY || !VMPAY_CONFIG.SECRET_KEY) {
                alert('API Key dan Secret Key belum diisi!');
                return;
            }
            
            try {
                // Test dengan membuat transaksi kecil
                const testData = {
                    amount: 1000,
                    customer_name: "Test Connection",
                    customer_email: "test@test.com",
                    customer_phone: "081234567890",
                    order_id: "TEST" + Date.now(),
                    payment_method: "QRISC",
                    description: "Test Connection to VMPay",
                    callback_url: VMPAY_CONFIG.WEBHOOK_URL,
                    return_url: window.location.href,
                    expired_time: Math.floor(Date.now() / 1000) + 300
                };
                
                const timestamp = Date.now();
                const signature = generateVMPaySignature(testData, timestamp);
                
                alert('Menguji koneksi ke Violet Media Pay...');
                
                const response = await fetch(`${VMPAY_CONFIG.BASE_URL}/transaction/create`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${VMPAY_CONFIG.API_KEY}`,
                        'X-Signature': signature,
                        'X-Timestamp': timestamp.toString()
                    },
                    body: JSON.stringify(testData)
                });
                
                const responseText = await response.text();
                console.log('Test Response:', responseText);
                
                if (response.ok) {
                    alert('â Koneksi berhasil! API Key dan Secret Key valid.');
                } else {
                    alert('â Koneksi gagal. Status: ' + response.status + '\n' + responseText.substring(0, 100));
                }
            } catch (error) {
                alert('â Koneksi gagal: ' + error.message);
            }
        }

        function logoutAdmin() {
            adminLoggedIn = false;
            showAdminLogin();
        }

        function closeAdminModal() {
            document.getElementById('adminModal').style.display = 'none';
        }

        // ================= INITIALIZATION =================
        document.addEventListener('DOMContentLoaded', function() {
            // Load saved API credentials
            const savedApiKey = localStorage.getItem('vmpay_api_key');
            const savedSecretKey = localStorage.getItem('vmpay_secret_key');
            
            if (savedApiKey && savedSecretKey) {
                VMPAY_CONFIG.API_KEY = savedApiKey;
                VMPAY_CONFIG.SECRET_KEY = savedSecretKey;
            }
            
            // Initial render
            renderProducts();
            
            // Setup modal close
            const checkoutModal = document.getElementById('checkoutModal');
            const adminModal = document.getElementById('adminModal');
            
            checkoutModal.addEventListener('click', function(e) {
                if (e.target === this) {
                    closeCheckoutModal();
                }
            });
            
            adminModal.addEventListener('click', function(e) {
                if (e.target === this) {
                    closeAdminModal();
                }
            });
            
            // Update WhatsApp button
            document.querySelector('.whatsapp-btn').href = `https://wa.me/${CONFIG.WHATSAPP_ADMIN}`;
            
            // Check URL for payment success
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('payment_success')) {
                alert('Pembayaran berhasil! Silakan hubungi admin untuk mendapatkan produk Anda.');
                window.history.replaceState({}, document.title, window.location.pathname);
            }
            
            // Enable console logging for debugging
            console.log('WarungRIM loaded with config:', {
                apiKey: VMPAY_CONFIG.API_KEY ? VMPAY_CONFIG.API_KEY.substring(0, 10) + '...' : 'Not set',
                mode: VMPAY_CONFIG.MODE,
                debug: debugMode
            });
        });
    </script>
</body>
</html>
